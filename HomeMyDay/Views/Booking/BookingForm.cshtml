@model HomeMyDay.ViewModels.BookingFormViewModel

<h1>Boeking @Model.Accommodation.Name</h1>

<p>Algemene gegevens personen</p>

<form asp-action="BookingForm" method="post">

    @for (int i = 0; i < Model.Accommodation.MaxPersons; i++)
    {
        @if (i == 0)
        {
            <h2>Hoofdboeker</h2>
        }
        else
        {
            <h2>Boeker nummer @i</h2>
        }

        <label asp-for="@Model.Persons[i].Salutation"></label>
        <select asp-for="@Model.Persons[i].Salutation">
            <option>Dhr.</option>
            <option>Mevr.</option>
        </select>

        <label asp-for="@Model.Persons[i].Initials"></label>
        <input asp-for="@Model.Persons[i].Initials" />

        <label asp-for="@Model.Persons[i].FirstName"></label>
        <input asp-for="@Model.Persons[i].FirstName" />

        <label asp-for="@Model.Persons[i].Insertion"></label>
        <input asp-for="@Model.Persons[i].Insertion" />

        <label asp-for="@Model.Persons[i].LastName"></label>
        <input asp-for="@Model.Persons[i].LastName" />

        <label asp-for="@Model.Persons[i].BirthDate"></label>
        <input asp-for="@Model.Persons[i].BirthDate" />

        <label asp-for="@Model.Persons[i].Email"></label>
        <input asp-for="@Model.Persons[i].Email" />

        <label asp-for="@Model.Persons[i].Country"></label>
        <input asp-for="@Model.Persons[i].Country" />

        <label asp-for="@Model.Persons[i].PostalCode"></label>
        <input asp-for="@Model.Persons[i].PostalCode" />

        <label asp-for="@Model.Persons[i].HouseNumber"></label>
        <input asp-for="@Model.Persons[i].HouseNumber" />

        <label asp-for="@Model.Persons[i].HouseNumberSuffix"></label>
        <input asp-for="@Model.Persons[i].HouseNumberSuffix" />

        <label asp-for="@Model.Persons[i].PhoneNumber"></label>
        <input asp-for="@Model.Persons[i].PhoneNumber" />

        <label asp-for="@Model.Persons[i].Nationality"></label>
        <input asp-for="@Model.Persons[i].Nationality" />
    }

    <input type="submit" />

</form>