@model ResetPasswordViewModel
 
<form class="col-md-6" asp-controller="Account" asp-action="ResetPassword" method="post">
        <div class="form-group">
            <label class="control-label" asp-for="NewPassword">Nieuw wachtwoord</label>
            <input class="form-control" asp-for="NewPassword"/>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="NewPasswordConfirmation">Herhaal nieuw wachtwoord</label>
            <input class="form-control" asp-for="NewPasswordConfirmation"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">
                Reset wachtwoord
            </button>
        </div>
</form>
