@model HomeMyDay.ViewModels.AccommodationSearchResultsViewModel

@{
    ViewData["Title"] = "Zoekresultaten";
}

<link rel="stylesheet" type="text/css" href="~/css/search.css" />

<h1 class="text-center">Zoekresultaten</h1>

<div class="container">
    <div class="row">
        @await Component.InvokeAsync("SearchBar", Model.Search)
    </div>
</div>

<div class="row">
    <div class="container" id="search-results">

        @foreach (Accommodation accommodation in Model.Accommodations)
        {
            <div class="search-result">
                <div class="accommodation-preview">
                    <img src="~/images/accommodationplaceholder.jpg" />
                    <div class="accommodation-image-text text-center">
                        <h2>@accommodation.Name</h2>
                        <p>@accommodation.Country, @accommodation.Continent</p>
                    </div>
                </div>
                <div class="accommodation-info">
                    <p>@accommodation.Description</p>
                    <p class="planecar">
                        <i class="fa fa-plane fa-2x" aria-hidden="true"></i>
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        <i class="fa fa-car fa-2x" aria-hidden="true"></i>
                    </p>
                    <p class="price">&euro;@accommodation.Price</p>
                </div>
            </div>
        }
    </div>

</div>
