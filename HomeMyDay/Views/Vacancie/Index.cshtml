@model IEnumerable<HomeMyDay.Models.Vacancie>

<div class="container">
    <h1 class="page-header">Onze Vacatures</h1>
    <div class="col-lg-12">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">            
            @foreach(var p in Model)
            {
                <div class="vacancy-block">
                    <h3><a asp-controller="Vacancie" asp-action="Detail" asp-route-id="@p.Id">@p.JobTitle</a></h3>
                    <p>@p.Company</p>
                    <span class="gray">@p.City</span>                        
                </div>
            }
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>