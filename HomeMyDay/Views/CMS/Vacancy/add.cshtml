@model VacancyViewModel
<div class="row">
    <div class="container">
        <h1>Add Vacancy</h1>
            <div class="panel-body">
                @Html.ValidationSummary(true)

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label asp-for="JobTitle">JobTitle:</label>
                        @Html.TextBoxFor(model => model.JobTitle)
                        @Html.ValidationMessageFor(model => model.JobTitle)
                    </div>
                    <div class="form-group">
                        <label asp-for="Company">Company:</label>
                        @Html.TextBoxFor(model => model.Company)
                        @Html.ValidationMessageFor(model => model.Company)
                    </div>
                    <div class="form-group">
                        <label asp-for="City">City:</label>
                        @Html.TextBoxFor(model => model.City)
                        @Html.ValidationMessageFor(model => model.City)
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutVacancy">AboutVacancy:</label>
                        @Html.TextAreaFor(model => model.AboutVacancy)
                        @Html.ValidationMessageFor(model => model.AboutVacancy)
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutFunction">AboutFunction:</label>
                        @Html.TextAreaFor(model => model.AboutFunction)
                        @Html.ValidationMessageFor(model => model.AboutFunction)
                    </div>
                    <div class="form-group">
                        <label asp-for="JobRequirements">JobRequirements:</label>
                        @Html.TextAreaFor(model => model.JobRequirements)
                        @Html.ValidationMessageFor(model => model.JobRequirements)
                    </div>

                    <div class="form-group">
                        <label asp-for="WeOffer">WeOffer:</label>
                        @Html.TextAreaFor(model => model.WeOffer)
                        @Html.ValidationMessageFor(model => model.WeOffer)
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">
                            Add
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
