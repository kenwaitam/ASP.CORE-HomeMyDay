@model Accommodation

<div class="container m-b-20">
    <div class="row">
        <h2>Accommodation: @Model.Id</h2>
        <form asp-area="CMS"
              asp-controller="Accommodation"
              asp-action="Edit"
              asp-route-id="@Model.Id"
              method="post">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label>
                <textarea asp-for="@Model.Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MaxPersons"></label>
                <input asp-for="@Model.MaxPersons" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Rooms"></label>
                <input asp-for="@Model.Rooms" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Beds"></label>
                <input asp-for="@Model.Beds" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price"></label>
                <input asp-for="@Model.Price" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.SpaceText"></label>
                <textarea asp-for="@Model.SpaceText" c class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ServicesText"></label>
                <textarea asp-for="@Model.ServicesText" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PricesText"></label>
                <textarea asp-for="@Model.PricesText" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RulesText"></label>
                <textarea asp-for="@Model.RulesText" c class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CancellationText"></label>
                <textarea asp-for="@Model.CancellationText" class="form-control" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Save</button>
        </form>
    </div>
</div>