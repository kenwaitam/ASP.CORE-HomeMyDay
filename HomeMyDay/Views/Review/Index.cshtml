@model IEnumerable<Review>
<div class="container">
    <h1 class="page-header">Reviews</h1>

    <div class="col-lg-12">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">       

            @if (Model.Any())
            {
                @foreach (var p in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h3>@p.Title</h3>
                            <p>@p.Text</p>
                            <span>@p.Name</span>
                            <span>@p.Date.ToString("dd MMM yyyy")</span>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h2>Er zijn op dit moment geen reviews</h2>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>