@using HomeMyDay.Web.Base.ViewModels
@model HomeMyDay.Web.Base.ViewModels.PressViewModel
<div>
    <img class="header-image img-responsive" src="~/images/pers.png" />
</div>

<div class="container mbot80">
    <h1 class="page-header text-center">Pers pagina</h1>
    <div class="col-md-9 col-sm-12 col-xs-12">
        <div class="row">
            <div>
                <h3 class="m-b-25">Laatste Nieuws</h3>
            </div>

            <div>
                <h3 class="m-b-25">Lees meer!</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-12 col-xs-12 text-center">
        <h3 class="m-b-25">Wil je contact met ons?</h3>

        <div class="row col-md-offset-1 col-sm-offset-4 col-xs-offset-1">
            <a href="callto:0612345678">
                <div class="col-md-2 col-sm-2 col-xs-2">
                    <i class="fa fa-phone icon-color fa-lg"></i>
                </div>
                <div class="col-md-9 col-sm-4 col-xs-10">
                    <strong>06-12345678</strong>
                </div>
            </a>
        </div>
        <div class="row col-md-offset-1 col-sm-offset-4 col-xs-offset-1">
            <a href="mailto:testemail@gmail.com">
                <div class="col-md-2 col-sm-2 col-xs-2">
                    <i class="fa fa-envelope icon-color fa-lg"></i>
                </div>
                <div class="col-md-9 col-sm-4 col-xs-10">
                    <strong>testemail@gmail.com</strong>
                </div>
            </a>
        </div>
        <div class="row col-md-offset-1 col-sm-offset-4 col-xs-offset-1">
            <div class="col-md-2 col-sm-2 col-xs-2">
                <i class="fa fa-map-marker icon-color fa-2x"></i>
            </div>
            <div class="col-md-9 col-sm-4 col-xs-10">
                <strong>Adresstraat 46</strong>
            </div>
        </div>

        <div class="rss-feed">
            <h3 class="m-b-25">RSS Feed</h3>            
            @{ 
                var data = ViewData["reader"];
            }
            <h4>@data</h4>
            <span>@data</span>
        </div>
    </div>
</div>